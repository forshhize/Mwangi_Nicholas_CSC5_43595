//System Libraries

#include <iostream>//I/O standard
#include <iomanip>//Formatting
#include <fstream>//I/O File
using namespace std;

//User Libraries

//Global Constants

//Function Prototypes

//Execution Begins Here!
 




int main(int argc, char**argv) {
    // Declare variables
    
    
    unsigned short test1; 
    unsigned short test2;
    unsigned short test3; 
    unsigned short test4;
    unsigned short test5;
    
    float average; //income generated by sales

 

    
    //Prompt the user for inputs
    cout<< "What is the score of test one?"<<endl;
    cin>> test1;
    cout<< "What is the score of test two?"<<endl;
    cin>> test2;
    cout<< "What is the score of test three?"<<endl;
    cin>> test3;
    cout<< "What is the score of test four?"<<endl;
    cin>> test4;
    cout<< "What is the score of test five?"<<endl;
    cin>> test5;
    
    //calculate Class A ticket sales
    
    average = (test1 + test2 + test3 + test4 + test5)/5 ;
    
    cout<<setprecision(1)<<fixed<<"The average of the five test scores is  "<< average << endl;
    
    
    
    
    
            
    
    
    
    
    return 0;
}
